<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <include
        layout="@layout/calculator_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ddd"
                android:minHeight="@dimen/cal_button_height"
                android:text="7"
                android:textColor="#333"
                android:textSize="@dimen/cal_button_text_size" />

            <Button
                android:id="@+id/btn_eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ddd"
                android:minHeight="@dimen/cal_button_height"
                android:text="8"
                android:textColor="#333"
                android:textSize="@dimen/cal_button_text_size" />

            <Button
                android:id="@+id/btn_nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ddd"
                android:minHeight="@dimen/cal_button_height"
                android:text="9"
                android:textColor="#333"
                android:textSize="@dimen/cal_button_text_size" />

            <Button
                android:id="@+id/btn_screenshoot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ccc"
                android:minHeight="@dimen/cal_button_height"
                android:text="pt"
                android:textColor="@color/calColorPrimaryDark"
                android:textSize="@dimen/cal_button_text_size" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ddd"
                android:minHeight="@dimen/cal_button_height"
                android:text="4"
                android:textColor="#333"
                android:textSize="@dimen/cal_button_text_size" />

            <Button
                android:id="@+id/btn_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ddd"
                android:minHeight="@dimen/cal_button_height"
                android:text="5"
                android:textColor="#333"
                android:textSize="@dimen/cal_button_text_size" />

            <Button
                android:id="@+id/btn_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ddd"
                android:minHeight="@dimen/cal_button_height"
                android:text="6"
                android:textColor="#333"
                android:textSize="@dimen/cal_button_text_size" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ccc"
                android:minHeight="@dimen/cal_button_height"
                android:text="C"
                android:textColor="@color/calColorPrimaryDark"
                android:textSize="@dimen/cal_button_text_size" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ddd"
                android:minHeight="@dimen/cal_button_height"
                android:text="1"
                android:textColor="#333"
                android:textSize="@dimen/cal_button_text_size" />

            <Button
                android:id="@+id/btn_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ddd"
                android:minHeight="@dimen/cal_button_height"
                android:text="2"
                android:textColor="#333"
                android:textSize="@dimen/cal_button_text_size" />

            <Button
                android:id="@+id/btn_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ddd"
                android:minHeight="@dimen/cal_button_height"
                android:text="3"
                android:textColor="#333"
                android:textSize="@dimen/cal_button_text_size" />

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ccc"
                android:minHeight="@dimen/cal_button_height"
                android:text="cg"
                android:textColor="@color/calColorPrimaryDark"
                android:textSize="@dimen/cal_button_text_size" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_dot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ddd"
                android:gravity="center"
                android:minHeight="@dimen/cal_button_height"
                android:text="."
                android:textColor="#333"
                android:textSize="@dimen/cal_button_text_size" />

            <TextView
                android:id="@+id/btn_zero"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ddd"
                android:gravity="center"
                android:minHeight="@dimen/cal_button_height"
                android:text="0"
                android:textColor="#333"
                android:textSize="@dimen/cal_button_text_size" />

            <TextView
                android:id="@+id/btn_divide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ddd"
                android:gravity="center"
                android:minHeight="@dimen/cal_button_height"
                android:text="00"
                android:textColor="#333"
                android:textSize="@dimen/cal_button_text_size" />

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_keyboard_arrow_down_grey_900_24dp"
                android:background="#ccc"
                android:gravity="center"
                android:scaleType="center"
                android:minHeight="@dimen/cal_button_height"
                android:textColor="@color/calColorPrimaryDark"
                android:textSize="@dimen/cal_button_text_size" />

            <!--android:src="@drawable/ic_keyboard_arrow_down_grey_900_24dp"-->
        </LinearLayout>

    </LinearLayout>

</LinearLayout>