<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0.3dp"
    android:background="#FFFFFF">


    <CheckBox
        android:id="@+id/countryCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/countryPicture"
        android:layout_width="@dimen/flag_thumbnail_width"
        android:layout_height="@dimen/flag_thumbnail_height"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/countryCheckBox"
        app:layout_constraintTop_toTopOf="@+id/countryCheckBox"
        android:layout_marginTop="0dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/countryCheckBox"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/countryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/exchange_title"
        android:textSize="@dimen/text_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/countryCheckBox"
        app:layout_constraintLeft_toRightOf="@+id/countryPicture"
        android:layout_marginLeft="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
